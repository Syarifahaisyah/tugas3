<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:orientation="vertical">

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivdocter"
            android:layout_width="match_parent"
            android:layout_height="206dp"
            android:layout_weight="1"
            android:onClick="clickdocter"
            app:srcCompat="@drawable/docter" />

        <ImageView
            android:id="@+id/ivpolice"
            android:layout_width="match_parent"
            android:layout_height="206dp"
            android:layout_weight="1"
            android:onClick="clickpolice"
            app:srcCompat="@drawable/police" />
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:layout_weight="1"
            android:id="@+id/ivschool"
            android:layout_width="match_parent"
            android:layout_height="206dp"
            android:onClick="clickschool2"
            app:srcCompat="@drawable/school2" />

        <ImageView
            android:layout_weight="1"
            android:id="@+id/ivsupermarket2"
            android:layout_width="match_parent"
            android:layout_height="206dp"
            android:onClick="supermarket2"
            app:srcCompat="@drawable/supermarket2" />
    </TableRow>
</LinearLayout>